<UserControl x:Class="Zaozi.Code.TestUI.Workstation.Views.WorkstationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zaozi.Code.TestUI"
             xmlns:wpf="http://wpf.synyi.com"
             xmlns:vm="clr-namespace:Zaozi.Code.TestUI.Workstation.ViewModels" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance {x:Type vm:WorkstationViewModel}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <wpf:HtmlDecodeConverter x:Key="HtmlDecodeConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--标题栏-->
        <Border Background="{DynamicResource {x:Static wpf:WpfStyles.MajorBrush11Key}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!--左侧标题-->
                <Border Background="{DynamicResource {x:Static wpf:WpfStyles.MajorBrush11Key}}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseDown">
                            <i:InvokeCommandAction Command="{Binding CaptionCommand}" PassEventArgsToCommand="True"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PluginTitle}"
                       FontSize="{DynamicResource {x:Static wpf:WpfStyles.FontSizeTitle04Key}}"
                       Foreground="{DynamicResource {x:Static wpf:WpfStyles.GrayBrush01Key}}"/>
                    </StackPanel>
                </Border>
                <!--右侧控制区-->
                <Border Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <Button Padding="0" VerticalAlignment="Stretch" BorderThickness="0"
                    Background="Transparent" Content="&#xe7be;"
                    Command="{Binding MinimizeCommand}"
                    CommandParameter="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}"
                    Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                    FontFamily="{DynamicResource {x:Static wpf:WpfStyles.IconsFontFamilyKey}}"
                    FontSize="{DynamicResource {x:Static wpf:WpfStyles.IconsFontSizeTitle04Key}}" />
                        <Button Padding="0" VerticalAlignment="Stretch" BorderThickness="0"
                    Background="Transparent" Content="&#xe7c0;"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}"
                    Width="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                    FontFamily="{DynamicResource {x:Static wpf:WpfStyles.IconsFontFamilyKey}}"
                    FontSize="{DynamicResource {x:Static wpf:WpfStyles.IconsFontSizeTitle04Key}}"
                    Style="{DynamicResource {x:Static wpf:WpfStyles.Button61Key}}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <!--内容区-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--左侧菜单-->
            <ListBox  ItemsSource="{Binding LeftMenuList}" SelectedItem="{Binding CurrentLeftMenu}"
         Style="{DynamicResource {x:Static wpf:WpfStyles.ListBox21Key}}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,10,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock HorizontalAlignment="Center"
                           Text="{Binding Icon, Converter={StaticResource HtmlDecodeConverter}}"
                           FontFamily="{DynamicResource {x:Static wpf:WpfStyles.IconsFontFamilyKey}}"
                           FontSize="{DynamicResource {x:Static wpf:WpfStyles.IconsFontSizeTitle03Key}}"/>
                            <TextBlock Grid.Row="1" Text="{Binding Name}" HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!--主区域-->
            <ContentControl Grid.Column="1" wpf:RegionManager.RegionName="{x:Static local:ZaoziConst.MainRegion}"/>
        </Grid>
    </Grid>
</UserControl>

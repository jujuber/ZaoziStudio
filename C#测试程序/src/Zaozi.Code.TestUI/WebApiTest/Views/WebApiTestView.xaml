<UserControl x:Class="WebApiTest.Views.WebApiTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WebApiTest.Views"
             xmlns:vm="clr-namespace:WebApiTest.ViewModels"
             d:DataContext="{d:DesignInstance {x:Type vm:WebApiTestViewModel}}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="API地址：" Margin="0,0,0,5"/>
            <TextBox x:Name="ApiUrlTextBox" 
                     Height="25"
                     Text="{Binding ApiUrl, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Text="用户名：" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     Height="25"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Text="密码：" Margin="0,10,0,5"/>
            <TextBox x:Name="PasswordBox" 
                        Height="25"
                     Text="{Binding KeyId, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Button Content="用户发送请求" 
                    Margin="0,10,0,0" 
                    Height="30"
                    Command="{Binding SendRequestCommand}"/>
            <Button Content="切换科室发送请求" 
        Margin="0,10,0,0" 
        Height="30"
        Command="{Binding SwitchOrgCommand}"/>
        </StackPanel>
        
        <TextBox Grid.Row="1" 
                 Margin="10"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Text="{Binding ResponseContent, Mode=OneWay}"/>
    </Grid>
</UserControl> 
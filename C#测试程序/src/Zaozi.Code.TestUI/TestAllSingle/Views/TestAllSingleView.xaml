<UserControl x:Class="Zaozi.Code.TestUI.TestAllSingle.Views.TestAllSingleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zaozi.Code.TestUI.TestAllSingle.Views"
             xmlns:vm="clr-namespace:Zaozi.Code.TestUI.TestAllSingle.ViewModels"
             d:DataContext="{d:DesignInstance {x:Type vm:TestAllSingleViewModel}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding EdtValue}" 
            TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="5" HorizontalAlignment="Stretch"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal">
            <Button Margin="3" Content="Yeild测试" Command="{Binding YieldCommand}"/>
            <Button Margin="3" Content="ValueTuple测试" Command="{Binding ValueTupleCommand}"/>
            
        </StackPanel>
    </Grid>
</UserControl>
